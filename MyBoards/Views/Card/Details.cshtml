@model MyBoards.Models.Card

@{
    ViewData["Title"] = Model.Title;
}

<h2>Tarjeta</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.CardList)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CardList.Name)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State.Title)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.CardTags)
        </dt>
        @foreach (var cardTag in Model.CardTags)
        {
            <dd>
                @cardTag.Tag.Name
            </dd>
            <br />
        }
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.CardResponsibles)
        </dt>
        @foreach (var cardResponsible in Model.CardResponsibles)
        {
            <dd>
                @cardResponsible.Responsible.Name
            </dd>
            <br />
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
